# .. more yabai startup stuff
# #!/usr/bin/env sh

# the scripting-addition must be loaded manually if
# you are running yabai on macOS Big Sur. Uncomment
# the following line to have the injection performed
# when the config is executed during startup.
#
# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)
#
# sudo yabai --load-sa
# yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_origin_display        default
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_shadow                on
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config window_border                off
yabai -m config window_border_width          6
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               ctrl
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  03
yabai -m config bottom_padding               03
yabai -m config left_padding                 03
yabai -m config right_padding                03
yabai -m config window_gap                   03

# rules

# manage off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Karabiner Elements$" manage=off
yabai -m rule --add app="^Yandex\.Disk$" manage=off
yabai -m rule --add app="^Docker" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Bitwarden$" manage=off
yabai -m rule --add app="^1Password$" manage=off
yabai -m rule --add app="^Spark$" manage=off
yabai -m rule --add app="^Preview$" manage=off
## misc
yabai -m rule --add app="^Notes$" space=5
yabai -m rule --add app="^Notion$" space=5
yabai -m rule --add app="^Reminders$" space=5

## code
yabai -m rule --add app="^kitty$" space=1
yabai -m rule --add app="^neovide$" space=1
yabai -m rule --add app="^Terminal$" manage=off layer=above
yabai -m rule --add app="^Sublime Text$" space=3
yabai -m rule --add app="^Sublime Merge$" space=3
yabai -m rule --add app="^Code$" space=3

## chats
yabai -m rule --add app="^Telegram$" space=4
yabai -m rule --add app="^Slack$" space=4

## browsers
yabai -m rule --add app="^Safari$" space=2
yabai -m rule --add app="^Chrome$" space=2
yabai -m rule --add app="^qutebrowser$" space=2
yabai -m rule --add app="^Firefox$" space=2

# spacebar
#SPACEBAR_HEIGHT=$(spacebar -m config height)
SPACEBAR_HEIGHT=26
yabai -m config external_bar all:$SPACEBAR_HEIGHT:0

# floating terminal
FLOATING_TERMINAL="yabai -m window --grid 4:4:1:1:2:2"

yabai -m rule --add title="^floating terminal$" manage=off
yabai -m signal --add event=window_created title="^floating terminal$" action="$FLOATING_TERMINAL"
yabai -m signal --add event=window_mimize action="yabai -m window --destroy"

echo "yabai configuration loaded.."
